<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/lightWhite">

    <TextView
        android:id="@+id/menu_slogon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:layout_toEndOf="@+id/side_image"
        android:text="@string/slogan_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_slogon"
        android:layout_marginStart="-20dp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/side_image"
        android:fontFamily="@font/brandon_grotesque_black"
        android:text="@string/logo_name_abr"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/profile_logo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/profile3"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/side_image"
        android:layout_width="68dp"
        android:layout_height="106dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/profile5" />





</RelativeLayout>